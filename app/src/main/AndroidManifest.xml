<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.luma">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:theme="@style/Theme.LUMA"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true" >
        <activity android:name="com.example.luma.ui.login.ForgetPassword"/>
        <activity android:name="com.example.luma.ui.DrawerActivity" />
        <activity android:name="com.example.luma.ui.login.TermsConditions" />
        <activity android:name="com.example.luma.ui.signup.SignupActivity" />
        <activity android:name="com.example.luma.ui.products.ProductDetail" />
        <activity android:name="com.example.luma.ui.login.ActivityLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>